// -*- mode: jsonc -*-
{
  //     "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  "margin-bottom": 2,
  "margin-top": 2,
  "margin-left": 2,
  "margin-right": 2,
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "cpu",
    "memory",
    "network",
    "bluetooth",
    // "sway/scratchpad"
    //custom/spotify,
    "sway/mode",
    "tray"
  ],
  "modules-center": [
    "sway/workspaces"
    // "sway/window"
  ],
  "modules-right": [
    "sway/scratchpad",
    "backlight",
    // "idle_inhibitor",
    "pulseaudio",
    "clock",
    // "power-profiles-daemon",
    // "temperature",
    //        "sway/language",
    //custom/power
    "battery",
  ],
  // Modules configuration
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "ÔÑ†",
      "2": "ÔÑ°",
      // "3": "Ôâ®",
      // "4": "ÔÜº",
      "3": "ÔÇ¨",
      "4": "ÔÅµ",
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë"
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "sway/mode": {
    "format": "Mode {}"
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "Ôãí"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
    "format-disconnected": "Disconnected ÔÄÅ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": "ÔÉÑ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
      "on": "ÔÅ¥ "
    },
    "repeat-icons": {
      "on": "ÔÄû "
    },
    "single-icons": {
      "on": "ÔÄû1 "
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "icon-size": 18,
    "spacing": 10
  },
  "clock": {
    //     // "timezone": "America/New_York",
    //     "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    // "format": "{:%A, %B %d at %I:%M %p}",
    "format-alt": "{:%Y-%m-%d}"
  },
  "cpu": {
    "format": "{usage}% Ôãõ",
    // "format": "cpu‚ÄØ: {usage}%",
    "tooltip": false
  },
  "memory": {
    "format": "{}% ÔÉâ"
    // "format": "mem‚ÄØ: {}%"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    // "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    "format-icons": ["Ôãâ"]
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["üåë", "üåò", "üåó", "üåñ", "üåï"],
    "on-scroll-up": "brightnessctl -c backlight set +1%",
    "on-scroll-down": "brightnessctl -c backlight set 1%-",
    "on-click": "brightnessctl -c backlight set +4%",
    "on-click-right": "brightnessctl -c backlight set 4%-",
    // DONE : brightnessctl a besoin des acc√®s root pour fonctionner
    // donn√©s avec `sudo usermod -aG video ${USER}`
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon} ",
    // "format-full": "{capacity}% {icon}",
    "format-full": "Charg√©‚ÄØ!",
    // "format-charging": "{capacity}% Ôóß",
    "format-charging": "{capacity}% Ôá¶ ",
    "format-plugged": "{capacity}% Ôá¶ ",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },
  // "battery#bat2": {
  //     "bat": "BAT2"
  // },
  // "power-profiles-daemon": {
  //   "format": "{icon}",
  //   "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  //   "tooltip": true,
  //   "format-icons": {
  //     "default": "ÔÉß",
  //     "performance": "ÔÉß",
  //     "balanced": "Ôâé",
  //     "power-saver": "ÔÅ¨"
  //   }
  // },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    // "format-wifi": "{essid} ({signalStrength}%)",
    "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    // "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "format-ethernet": "{ipaddr}/{cidr}",
    // "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "tooltip-format": "{ifname} via {gwaddr}",
    // "format-linked": "{ifname} (No IP) Ôûñ",
    "format-linked": "{ifname} (No IP)",
    "format-disconnected": "Disconnected ‚ö†",
    // "format-disconnected": "Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },
  "bluetooth": {
    "format":"Bluetooth‚ÄØ: {status}",
    "format":"Ôäî {status}",
    // "on-click" TODO,
  },
  "pulseaudio": {
    "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} | {format_source}",
    // "format": "Audio‚ÄØ: {volume}%",
    "tooltip":false,
    "on-click":"pactl set-sink-mute @DEFAULT_SINK@ toggle",
    // "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    // "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    // "format-muted": "Ôö© {format_source}",
    "format-muted": "Muet | {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click-right": "pavucontrol"
  },
  // "custom/media": {
  //     "format": "{icon} {}",
  //     "return-type": "json",
  //     "max-length": 40,
  //     "format-icons": {
  //         "spotify": "ÔÜº",
  //         "default": "üéú"
  //     },
  //     "escape": true,
  //     //"exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
