
mode "window" {
  bindsym Space mode "default"

  # You can "split" the current object of your focus with
  # $mod+b or $mod+v, for horizontal and vertical splits
  # respectively.
  bindsym h splitv
  bindsym v splith

  #
  # Workspaces:
  #
  # Switch to workspace
  bindsym --to-code 1 workspace number 1
  bindsym --to-code 2 workspace number 2
  bindsym --to-code 3 workspace number 3
  bindsym --to-code 4 workspace number 4
  bindsym --to-code 5 workspace number 5
  bindsym --to-code 6 workspace number 6
  bindsym --to-code 7 workspace number 7
  bindsym --to-code 8 workspace number 8
  bindsym --to-code 9 workspace number 9
  bindsym --to-code 0 workspace number 10

  # Switch the current container between different layout styles
  bindsym t mode "default"; layout tabbed
  bindsym Shift+t layout tabbed
  bindsym s mode "default"; layout stacking
  bindsym Shift+s layout stacking
  # n like "normal"
  bindsym n mode "default"; layout toggle split
  bindsym Shift+n layout toggle split

  # Make the current focus fullscreen
  bindsym f fullscreen

  # Toggle the current focus between tiling and floating mode
  bindsym Shift+r floating toggle
  
  # Swap focus between the tiling area and the floating area
  bindsym r focus mode_toggle

  # Move focus to the parent container
  bindsym p focus parent
  bindsym Shift+p focus child

  # Move the currently focused window to the scratchpad
  bindsym minus move scratchpad

  # Show the next scratchpad window or hide the focused scratchpad window.
  # If there are multiple scratchpad windows, this command cycles through them.
  bindsym plus scratchpad show

}
